{
  "name": "ng-future",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "npx playwright test --ui",
    "test:e2e:ci": "npx playwright test",
    "serve:ssr:ng-future": "node dist/ng-future/server/server.mjs",
    "format": "prettier --write --ignore-path .gitignore .",
    "lint": "ng lint",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "17.3.2",
    "@angular/cdk": "^17.3.2",
    "@angular/common": "17.3.2",
    "@angular/compiler": "17.3.2",
    "@angular/core": "17.3.2",
    "@angular/forms": "17.3.2",
    "@angular/platform-browser": "17.3.2",
    "@angular/platform-browser-dynamic": "17.3.2",
    "@angular/platform-server": "17.3.2",
    "@angular/router": "17.3.2",
    "@angular/ssr": "17.3.2",
    "@types/luxon": "3.4.2",
    "express": "4.19.2",
    "luxon": "3.4.4",
    "rxjs": "7.8.1",
    "tslib": "2.6.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "17.3.2",
    "@angular-eslint/builder": "17.3.0",
    "@angular-eslint/eslint-plugin": "17.3.0",
    "@angular-eslint/eslint-plugin-template": "17.3.0",
    "@angular-eslint/schematics": "17.3.0",
    "@angular-eslint/template-parser": "17.3.0",
    "@angular/cli": "17.3.2",
    "@angular/compiler-cli": "17.3.2",
    "@mswjs/storage": "0.1.0",
    "@playwright/test": "^1.42.1",
    "@types/express": "4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "20.12.2",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "@typestrong/ts-mockito": "2.6.6",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-preset-angular": "^14.0.3",
    "lint-staged": "15.2.2",
    "msw": "2.2.13",
    "prettier": "3.2.5",
    "typescript": "5.4.3"
  },
  "msw": {
    "workerDirectory": "./src/"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,html,css,md}": "prettier --write"
  }
}
